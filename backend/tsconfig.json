{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "migrations/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}